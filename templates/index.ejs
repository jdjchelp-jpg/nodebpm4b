    <script>
        // Global State
        const state = {
            theme: 'dark',
            smartMode: true,
            fileType: 'mp3',
            fileInfo: null,
            chapters: [],
            cumulativeTime: 0,
            durationMode: 'minutes',
            isProcessing: false
        };

        // DOM Elements
        const elements = {
            themeToggle: document.getElementById('themeToggle'),
            smartModeToggle: document.getElementById('smartModeToggle'),
            modeText: document.getElementById('modeText'),
            conversionDescription: document.getElementById('conversionDescription'),
            fileDropZone: document.getElementById('fileDropZone'),
            fileDropText: document.getElementById('fileDropText'),
            fileDropHint: document.getElementById('fileDropHint'),
            fileInfo: document.getElementById('fileInfo'),
            sourceFile: document.getElementById('sourceFile'),
            outputName: document.getElementById('outputName'),
            convertBtn: document.getElementById('convertBtn'),
            convertBtnText: document.getElementById('convertBtnText'),
            conversionForm: document.getElementById('conversionForm'),
            chaptersContainer: document.getElementById('chaptersContainer'),
            chaptersPreview: document.getElementById('chaptersPreview'),
            chapterTitle: document.getElementById('chapterTitle'),
            chapterDuration: document.getElementById('chapterDuration'),
            nextTimestamp: document.getElementById('nextTimestamp'),
            addChapterBtn: document.getElementById('addChapterBtn'),
            toggleBatchBtn: document.getElementById('toggleBatchBtn'),
            batchArea: document.getElementById('batchArea'),
            batchInput: document.getElementById('batchInput'),
            applyBatchBtn: document.getElementById('applyBatchBtn'),
            exportChaptersBtn: document.getElementById('exportChaptersBtn'),
            clearChaptersBtn: document.getElementById('clearChaptersBtn'),
            commandPreview: document.getElementById('commandPreview'),
            copyCommandBtn: document.getElementById('copyCommandBtn'),
            progressSection: document.getElementById('progressSection'),
            progressBar: document.getElementById('progressBar'),
            statusBadge: document.getElementById('statusBadge'),
            statusText: document.getElementById('statusText'),
            statusSpinner: document.getElementById('statusSpinner'),
            progressPercent: document.getElementById('progressPercent'),
            toastContainer: document.getElementById('toastContainer'),
            fileTypeTabs: document.querySelectorAll('.file-type-tab'),
            durationToggleButtons: document.querySelectorAll('.duration-toggle button')
        };

        // Initialize
        function init() {
            loadTheme();
            setupEventListeners();
            updateCommandPreview();
            updateChaptersPreview();
        }

        // Theme Management
        function loadTheme() {
            const savedTheme = localStorage.getItem('bpm4b-theme') || 'dark';
            setTheme(savedTheme);
            elements.themeToggle.checked = savedTheme === 'dark';
        }

        function setTheme(theme) {
            state.theme = theme;
            document.documentElement.setAttribute('data-theme', theme);
            localStorage.setItem('bpm4b-theme', theme);
        }

        elements.themeToggle.addEventListener('change', (e) => {
            setTheme(e.target.checked ? 'dark' : 'light');
        });

        // Smart Mode
        elements.smartModeToggle.addEventListener('change', (e) => {
            state.smartMode = e.target.checked;
            updateModeIndicator();
            updateCommandPreview();
            showToast(state.smartMode ? 'Conversion mode enabled' : 'Chapter builder only mode', 'info');
        });

        function updateModeIndicator() {
            elements.modeText.textContent = state.smartMode ? 'Conversion Mode' : 'Chapter Builder Only';
            elements.convertBtn.disabled = !state.smartMode;
            if (!state.smartMode) {
                elements.convertBtnText.textContent = 'Conversion Disabled';
            } else {
                updateConvertButtonText();
            }
        }

        // File Type Selection
        elements.fileTypeTabs.forEach(tab => {
            tab.addEventListener('click', () => {
                elements.fileTypeTabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                state.fileType = tab.dataset.type;
                updateFileDropZone();
                updateConvertButtonText();
                updateCommandPreview();
            });
        });

        function updateFileDropZone() {
            const isM3U8 = state.fileType === 'm3u8';
            elements.fileDropText.textContent = isM3U8 ? 'Click or drag your M3U8 file here' : 'Click or drag your MP3 file here';
            elements.fileDropHint.textContent = isM3U8 ? 'M3U8 or HLS stream file' : 'MP3 audio file';
            elements.sourceFile.accept = isM3U8 ? '.m3u8,.m3u' : '.mp3,audio/mpeg';
            
            // Clear file info if switching types
            if (state.fileInfo && state.fileInfo.type !== state.fileType) {
                clearFileSelection();
            }
        }

        function updateConvertButtonText() {
            if (!state.smartMode) {
                elements.convertBtnText.textContent = 'Conversion Disabled';
                return;
            }
            elements.convertBtnText.textContent = state.fileType === 'mp3' ? 'Convert to M4B' : 'Convert to MKV';
        }

        // File Upload
        elements.fileDropZone.addEventListener('click', () => elements.sourceFile.click());
        
        elements.fileDropZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            elements.fileDropZone.classList.add('drag-over');
        });

        elements.fileDropZone.addEventListener('dragleave', () => {
            elements.fileDropZone.classList.remove('drag-over');
        });

        elements.fileDropZone.addEventListener('drop', (e) => {
            e.preventDefault();
            elements.fileDropZone.classList.remove('drag-over');
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                handleFileSelect(files[0]);
            }
        });

        elements.sourceFile.addEventListener('change', (e) => {
            if (e.target.files.length > 0) {
                handleFileSelect(e.target.files[0]);
            }
        });

        function handleFileSelect(file) {
            const isM3U8 = state.fileType === 'm3u8';
            const validExtensions = isM3U8 ? ['.m3u8', '.m3u'] : ['.mp3'];
            const isValid = validExtensions.some(ext => file.name.toLowerCase().endsWith(ext)) || 
                          (isM3U8 && file.type === 'application/x-mpegurl') ||
                          (isM3U8 && file.type === 'audio/mpegurl');

            if (!isValid) {
                showToast(`Invalid file type. Please select a ${state.fileType.toUpperCase()} file.`, 'error');
                return;
            }

            state.fileInfo = {
                name: file.name,
                size: file.size,
                type: state.fileType,
                file: file
            };

            const sizeMB = (file.size / (1024 * 1024)).toFixed(2);
            elements.fileInfo.innerHTML = `
                <div>
                    <strong>${file.name}</strong><br>
                    <small>${sizeMB} MB</small>
                </div>
                <button type="button" class="remove-file" onclick="clearFileSelection()">×</button>
            `;
            elements.fileInfo.style.display = 'flex';

            // Auto-generate output name
            const baseName = file.name.replace(/\.[^/.]+$/, '');
            elements.outputName.value = `${baseName}.${isM3U8 ? 'mkv' : 'm4b'}`;

            updateCommandPreview();
            showToast('File selected successfully', 'success');
        }

        function clearFileSelection() {
            state.fileInfo = null;
            elements.sourceFile.value = '';
            elements.fileInfo.style.display = 'none';
            updateCommandPreview();
        }

        // Duration Mode Toggle
        elements.durationToggleButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                elements.durationToggleButtons.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                state.durationMode = btn.dataset.mode;
                updateNextTimestamp();
            });
        });

        // Chapter Builder
        function parseDurationInput(input) {
            if (!input.trim()) return null;
            
            if (state.durationMode === 'minutes') {
                // Treat as minutes
                const minutes = parseFloat(input);
                if (isNaN(minutes) || minutes < 0) return null;
                return minutes * 60;
            } else {
                // Seconds mode - support MM:SS or pure seconds
                if (input.includes(':')) {
                    const parts = input.split(':');
                    if (parts.length === 2) {
                        const mins = parseInt(parts[0]) || 0;
                        const secs = parseFloat(parts[1]) || 0;
                        return mins * 60 + secs;
                    }
                }
                const seconds = parseFloat(input);
                return isNaN(seconds) || seconds < 0 ? null : seconds;
            }
        }

        function formatTime(seconds) {
            const hrs = Math.floor(seconds / 3600);
            const mins = Math.floor((seconds % 3600) / 60);
            const secs = Math.floor(seconds % 60);
            return `${hrs.toString().padStart(2, '0')}:${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
        }

        function updateNextTimestamp() {
            elements.nextTimestamp.textContent = formatTime(state.cumulativeTime);
        }

        elements.chapterTitle.addEventListener('input', updateNextTimestamp);
        elements.chapterDuration.addEventListener('input', () => {
            const duration = parseDurationInput(elements.chapterDuration.value);
            if (duration !== null) {
                updateNextTimestamp();
            }
        });

        elements.addChapterBtn.addEventListener('click', () => {
            const title = elements.chapterTitle.value.trim();
            const durationInput = elements.chapterDuration.value.trim();
            const duration = parseDurationInput(durationInput);

            if (!title) {
                showToast('Please enter a chapter title', 'error');
                return;
            }

            if (duration === null) {
                showToast('Please enter a valid duration', 'error');
                return;
            }

            const chapter = {
                id: Date.now(),
                title: title,
                duration: duration,
                start_time: state.cumulativeTime,
                start_time_formatted: formatTime(state.cumulativeTime)
            };

            state.chapters.push(chapter);
            state.cumulativeTime += duration;

            // Clear inputs
            elements.chapterTitle.value = '';
            elements.chapterDuration.value = '';
            updateNextTimestamp();

            renderChapters();
            updateChaptersPreview();
            updateCommandPreview();
            showToast(`Added "${title}" at ${chapter.start_time_formatted}`, 'success');
        });

        function renderChapters() {
            elements.chaptersContainer.innerHTML = state.chapters.map(chapter => `
                <div class="chapter-entry" data-id="${chapter.id}">
                    <div>
                        <strong>${chapter.title}</strong>
                    </div>
                    <div class="timestamp">${chapter.start_time_formatted}</div>
                    <div class="duration">${formatTime(chapter.duration)}</div>
                    <button type="button" class="remove-chapter-btn" onclick="removeChapter(${chapter.id})">×</button>
                </div>
            `).join('');
        }

        function removeChapter(id) {
            const index = state.chapters.findIndex(c => c.id === id);
            if (index !== -1) {
                // Subtract duration from cumulative time and recalculate all subsequent chapters
                const removedDuration = state.chapters[index].duration;
                state.chapters.splice(index, 1);
                
                // Recalculate all timestamps
                state.cumulativeTime = 0;
                state.chapters.forEach(chapter => {
                    chapter.start_time = state.cumulativeTime;
                    chapter.start_time_formatted = formatTime(state.cumulativeTime);
                    state.cumulativeTime += chapter.duration;
                });

                renderChapters();
                updateChaptersPreview();
                updateCommandPreview();
                updateNextTimestamp();
            }
        }

        elements.clearChaptersBtn.addEventListener('click', () => {
            if (state.chapters.length === 0) return;
            if (confirm('Clear all chapters?')) {
                state.chapters = [];
                state.cumulativeTime = 0;
                renderChapters();
                updateChaptersPreview();
                updateCommandPreview();
                updateNextTimestamp();
                showToast('All chapters cleared', 'info');
            }
        });

        // Batch Import
        elements.toggleBatchBtn.addEventListener('click', () => {
            elements.batchArea.classList.toggle('active');
        });

        elements.applyBatchBtn.addEventListener('click', () => {
            const text = elements.batchInput.value.trim();
            if (!text) return;

            const lines = text.split('\n').filter(line => line.trim());
            let addedCount = 0;

            lines.forEach(line => {
                const parts = line.split(',');
                if (parts.length >= 2) {
                    const title = parts[0].trim();
                    const durationStr = parts[1].trim();
                    const duration = parseDurationInput(durationStr);
                    
                    if (title && duration !== null) {
                        const chapter = {
                            id: Date.now() + addedCount,
                            title: title,
                            duration: duration,
                            start_time: state.cumulativeTime,
                            start_time_formatted: formatTime(state.cumulativeTime)
                        };
                        state.chapters.push(chapter);
                        state.cumulativeTime += duration;
                        addedCount++;
                    }
                }
            });

            if (addedCount > 0) {
                renderChapters();
                updateChaptersPreview();
                updateCommandPreview();
                updateNextTimestamp();
                showToast(`Imported ${addedCount} chapters`, 'success');
                elements.batchArea.classList.remove('active');
                elements.batchInput.value = '';
            } else {
                showToast('No valid chapters found in input', 'error');
            }
        });

        // Export Chapters
        elements.exportChaptersBtn.addEventListener('click', () => {
            if (state.chapters.length === 0) {
                showToast('No chapters to export', 'error');
                return;
            }

            const content = state.chapters.map(chapter => 
                `${chapter.start_time_formatted} - ${chapter.title}`
            ).join('\n');

            const blob = new Blob([content], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'chapters.txt';
            a.click();
            URL.revokeObjectURL(url);
            
            showToast('Chapters exported successfully', 'success');
        });

        // Chapters Preview
        function updateChaptersPreview() {
            if (state.chapters.length === 0) {
                elements.chaptersPreview.textContent = '// Chapter list will appear here\n// Add chapters using the form above';
                return;
            }

            const preview = state.chapters.map(chapter => 
                `${chapter.start_time_formatted} - ${chapter.title} (${formatTime(chapter.duration)})`
            ).join('\n');
            
            elements.chaptersPreview.textContent = preview;
        }

        // Command Preview
        function updateCommandPreview() {
            const isM4B = state.fileType === 'mp3';
            const outputExt = isM4B ? 'm4b' : 'mkv';
            const outputName = state.fileInfo ? 
                (elements.outputName.value.trim() || `output.${outputExt}`) : 
                `output.${outputExt}`;

            let cmd = `ffmpeg -i input.${state.fileType} -c:a ${document.getElementById('audioQuality').value}`;
            
            if (state.chapters.length > 0) {
                cmd += ` -map_metadata 1 -i chapters.txt`;
            }
            
            cmd += ` ${outputName}`;

            elements.commandPreview.textContent = cmd;
        }

        elements.copyCommandBtn.addEventListener('click', async () => {
            const cmd = elements.commandPreview.textContent;
            try {
                await navigator.clipboard.writeText(cmd);
                showToast('Command copied to clipboard', 'success');
            } catch (err) {
                showToast('Failed to copy command', 'error');
            }
        });

        // Form Submission
        elements.conversionForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            if (!state.smartMode) {
                showToast('Conversion mode is disabled. Enable it to convert files.', 'info');
                return;
            }

            if (!state.fileInfo) {
                showToast('Please select a source file', 'error');
                return;
            }

            if (state.isProcessing) {
                showToast('Conversion already in progress', 'error');
                return;
            }

            // Prepare form data
            const formData = new FormData();
            formData.append('source_file', state.fileInfo.file);
            formData.append('output_name', elements.outputName.value.trim() || '');
            formData.append('file_type', state.fileType);
            formData.append('audio_quality', document.getElementById('audioQuality').value);
            
            if (state.chapters.length > 0) {
                formData.append('chapters', JSON.stringify(state.chapters));
            }

            // Start conversion
            startConversion();
            await performConversion(formData);
        });

        function startConversion() {
            state.isProcessing = true;
            elements.progressSection.classList.add('active');
            elements.progressBar.style.width = '0%';
            elements.statusBadge.className = 'status-badge processing';
            elements.statusText.textContent = 'Starting conversion...';
            elements.statusSpinner.style.display = 'inline-block';
            elements.convertBtn.disabled = true;
            
            simulateProgress();
        }

        function simulateProgress() {
            let progress = 0;
            const interval = setInterval(() => {
                if (progress < 90) {
                    progress += Math.random() * 15;
                    if (progress > 90) progress = 90;
                    elements.progressBar.style.width = `${progress}%`;
                    elements.progressPercent.textContent = `${Math.round(progress)}%`;
                } else {
                    clearInterval(interval);
                }
            }, 500);
        }

        async function performConversion(formData) {
            try {
                elements.statusText.textContent = 'Uploading file...';
                
                const response = await fetch('/api/convert', {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.error || 'Conversion failed');
                }

                // Get filename from headers
                const contentDisposition = response.headers.get('Content-Disposition');
                let filename = 'output.m4b';
                if (contentDisposition) {
                    const match = contentDisposition.match(/filename="?([^"]+)"?/);
                    if (match) filename = match[1];
                }

                // Download the file
                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = filename;
                a.click();
                window.URL.revokeObjectURL(url);

                elements.progressBar.style.width = '100%';
                elements.progressPercent.textContent = '100%';
                elements.statusBadge.className = 'status-badge success';
                elements.statusText.textContent = 'Conversion complete!';
                elements.statusSpinner.style.display = 'none';
                
                showToast('Conversion completed successfully!', 'success');

                // Reset after delay
                setTimeout(() => {
                    resetConversion();
                }, 3000);

            } catch (error) {
                elements.statusBadge.className = 'status-badge error';
                elements.statusText.textContent = 'Conversion failed';
                elements.statusSpinner.style.display = 'none';
                showToast(error.message, 'error');
                
                setTimeout(() => {
                    resetConversion();
                }, 5000);
            } finally {
                state.isProcessing = false;
                elements.convertBtn.disabled = false;
            }
        }

        function resetConversion() {
            elements.progressSection.classList.remove('active');
            elements.progressBar.style.width = '0%';
            elements.statusBadge.className = 'status-badge';
            elements.statusText.textContent = 'Processing...';
            elements.progressPercent.textContent = '0%';
        }

        // Toast Notifications
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            
            let icon = '';
            if (type === 'success') icon = '✓';
            else if (type === 'error') icon = '✕';
            else icon = 'ℹ';

            toast.innerHTML = `<span>${icon}</span><span>${message}</span>`;
            elements.toastContainer.appendChild(toast);

            setTimeout(() => {
                toast.style.opacity = '0';
                toast.style.transform = 'translateX(100px)';
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // Event Listeners Setup
        function setupEventListeners() {
            updateCommandPreview();
            updateNextTimestamp();
        }

        // Initialize on load
        document.addEventListener('DOMContentLoaded', init);
    </script>
